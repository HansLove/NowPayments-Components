{
  "name": "@taloon/nowpayments-components",
  "version": "1.0.1",
  "description": "React components for cryptocurrency payments and withdrawals using NOWPayments API",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/index.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build",
    "build:storybook": "storybook build",
    "build:all": "npm run build:lib && npm run build:storybook",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run type-check && npm run build",
    "publish:patch": "npm run clean && npm run type-check && npm run build && npm version patch && npm publish",
    "publish:minor": "npm run clean && npm run type-check && npm run build && npm version minor && npm publish",
    "publish:major": "npm run clean && npm run type-check && npm run build && npm version major && npm publish"
  },
  "keywords": [
    "react",
    "cryptocurrency",
    "payments",
    "nowpayments",
    "crypto",
    "deposit",
    "withdraw",
    "bitcoin",
    "ethereum",
    "usdt"
  ],
  "author": "Diego <DieGopherLT>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HansLove/NowPayments-Components.git"
  },
  "homepage": "https://github.com/HansLove/NowPayments-Components#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "framer-motion": ">=11.0.0",
    "react-hook-form": ">=7.0.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "lucide-react": "^0.544.0",
    "qrcode.react": "^4.2.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^9.1.6",
    "@storybook/addon-onboarding": "^9.1.6",
    "@storybook/react-vite": "^9.1.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-storybook": "^9.1.6",
    "storybook": "^9.1.6",
    "typescript": "^5.7.3",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4"
  }
}
